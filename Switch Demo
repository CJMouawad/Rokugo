import java.util.*;

public class SwitchDemo {
	
	public static void main (String []args)
	{
		
		Scanner in = new Scanner(System.in);
		System.out.println("Good morning, sunshine! Select a number between 81-84 and I'll reveal your favorite season: ");		
		int season = in.nextInt();
		
		String seasonInt;
		switch(season) {
	
			case 81: seasonInt = ("You like new beginnings. Spring is for you!");
					break;
			case 82: seasonInt = ("Sunshine and margaritas, sign me up! You're definitely meant for summer.");
					break;
			case 83: seasonInt = ("The colors changing is a sight you'd never miss. Fall is your favorite!");
					break;
			case 84: seasonInt = ("Brr! You enjoy the snowy winters.");
					break;
			default: seasonInt = ("Sorry, please pick a number between 81-81!");
					break;
		}
			System.out.println(seasonInt);
	}
}
