import java.util.*;

public class SwitchDemo {
	
	public static void main (String []args)
	{
		
		Scanner in = new Scanner(System.in);
		System.out.println("Good morning, sunshine! Select a number between 81-84 and I'll reveal where you will live by your favorite season: ");		
		int season = in.nextInt();
		
		String seasonInt;
		switch(season) {
	
			case 81: seasonInt = ("You like new beginnings. Spring is for you! You'll be found somewhere in the United States, the land of opportunity.");
					break;
			case 82: seasonInt = ("Sunshine and margaritas, sign me up! You're definitely meant for summer. Frolicking along the beaches of the Caribbean is your type of vibe.");
					break;
			case 83: seasonInt = ("The colors changing is a sight you'd never miss. Fall is your favorite! You can be found in New York City this autumn.");
					break;
			case 84: seasonInt = ("Brr! You enjoy the snowy winters. Along the hills of St. Petersburg, Russia is where you can be found.");
					break;
			default: seasonInt = ("Sorry, please pick a number between 81-84!");
					break;
		}
			System.out.println(seasonInt);
	}
}
